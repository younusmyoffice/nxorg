---
// import Header5 from '../components/Header5.astro';
import Footer from '../components/Footer.astro';
import Subscribe from '../components/Subscribe.astro';
import Baselayout from '../layout/Baselayout.astro'; 
---
<Baselayout>
    


<section class="nxo-block pt-0">
  <div class="container-fluid p-0 pb-3">
  
    <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3897.875634512353!2d76.62470961481533!3d12.324156691282957!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3baf7a8fd2b95555%3A0x846c7aebf736925c!2sNextage%20Organics%20Pvt.%20Ltd.!5e0!3m2!1sen!2sin!4v1640711240792!5m2!1sen!2sin" 
      width="100%" height="300" frameborder="0" style="border:0" allowfullscreen=""></iframe>
  </div>
  <div class="container">
    <div class="row text-center justify-content-center pt-5">
      <div class="col-12 col-md-7">
        <h1>Contact Us</h1>
      </div>
    </div>

    <div class="row justify-content-center pt-4">
      <div class="col-12 col-md-7">
        <form>
          <div class="row">
            <div class="col">
              <input type="text" class="form-control" placeholder="Email">
            </div>
          </div>

          <div class="row mt-4">
            <div class="col">
              <input type="email" class="form-control" placeholder="Subject">
            </div>
          </div>

          <div class="row mt-4">
            <div class="col">
              <textarea class="form-control" name="message" rows="3" placeholder="How can we help?"></textarea>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col text-center">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="row-100"></div>
  </div>
  <div class="bg-gray">
    <div class="container">
      <div class="row-50"></div>
      <div class="row justify-content-center text-center">
        <div class="col-12 col-md mr-auto ml-auto">
          <img alt="image" height="40" class="mb-2" src="../images/icons/phone.svg">
          <p class="lead">1800-8893-235<a href="tel:1800-8893-235" class="hover:text-green-600"></a></p>
        </div>

        <div class="col-12 col-md pt-4 pt-md-0 mr-auto ml-auto">
          <img alt="image" height="40" class="mb-2" src="../images/icons/navigation.svg">
          <p class="lead"> #4397-4397/1, 9th Cross, St. Mary's Road, N. R. Mohalla, Mysuru - 570007<br></p>
        </div>

        <div class="col-12 col-md pt-4 pt-md-0 mr-auto ml-auto">
          <img alt="image" height="40" class="mb-2" src="../images/icons/mail.svg">
          <p class="lead">service@nextageorg.com<a href="mailto:service@nextageorg.com" class="hover:text-green-600"></a></p>
        </div>
      </div>
      <div class="row-50"></div>
    </div>
  </div>

  <div class="container">
    <!-- <div class="row-70"></div> -->
    <div class="row text-center">
      <div class="col">
        <p class="h2">
          <a href="https://www.facebook.com/nextageorganics" class="mx-2"><i class="fab fa-facebook"></i></a>
          <a href="https://www.twitter.com/nextageorganics" class="mx-2"><i class="fab fa-twitter"></i></a>
          <a href="https://www.instagram.com/nextageorganics" class="mx-2"><i class="fab fa-instagram"></i></a>
          <a href="https://www.google.com/nextageorganics" class="mx-2"><i class="fab fa-google"></i></a>
          <a href="https://www.pinterest.com/nextageorganics" class="mx-2"><i class="fab fa-pinterest"></i></a>
        </p>
      </div>
    </div>
  </div>
</section>


  <section class="nxo-block">
      <div class="container">
         <Subscribe/>
      </div>
</section>


   
   
</Baselayout>
